<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
xmlns:listview="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="WorldExplorerEurope.App.Views.MainPage"
             xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"  
             xmlns:ffSvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms" >

    <StackLayout>
        <!-- Place new controls here -->
        <Grid>
            <listview:SfListView x:Name="listView" ItemsSource="">
                <listview:SfListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <ffSvg:SvgCachedImage Source="" HeightRequest="60" WidthRequest="20"/>
                            <Label Text="{Binding CountryName}" FontSize="30" FontAttributes="Bold">
                                <Label.FontFamily>
                                    <OnPlatform x:TypeArguments="x:String">
                                        <On Platform="Android">RobotoMono-Bold.ttf#Roboto-Mono</On>
                                        <On Platform="UWP">/Assets/Fonts/ROBOTOMONO-BOLD.TTF#Roboto Mono</On>
                                    </OnPlatform>
                                </Label.FontFamily>
                            </Label>
                        </Grid>
                    </DataTemplate>
                </listview:SfListView.ItemTemplate>
            </listview:SfListView>
        </Grid>
        <Button Padding="5" Text="Go to Login" Clicked="Button_Clicked"></Button>
    </StackLayout>

</ContentPage>
